<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_sale_order_form_crm_fields" model="ir.ui.view">
    <field name="name">sale.order.form.crm.fields</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <!-- 1) Pestaña "Información del CRM" antes de Líneas -->
      <xpath expr="//notebook/page[@name='order_lines']" position="before">
        <page string="Información del CRM" name="crm_information">
          <group>
            <group>
              <field name="service_frequency"/>
              <field name="pickup_location"/>
            </group>
            <group>
              <field name="residue_new"/>
              <field name="requiere_visita"/>
            </group>
          </group>
        </page>
      </xpath>

      <!-- 2) Campos globales antes de Términos de pago -->
      <xpath expr="//field[@name='payment_term_id']" position="before">
        <group>
          <field name="expiration_date"/>
          <field name="no_delivery"/>
        </group>
      </xpath>

      <!-- 3) Columnas CRETIBM en la vista de lista de order_line -->
      <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
        <field name="residue_type"/>
        <field name="c"/>
        <field name="r"/>
        <field name="e"/>
        <field name="t"/>
        <field name="i"/>
        <field name="b"/>
        <field name="m"/>
      </xpath>

      <!-- 4) Columnas CRETIBM en el formulario embebido de order_line -->
      <xpath expr="//field[@name='order_line']/form/field[@name='name']" position="after">
        <field name="residue_type"/>
        <field name="c"/>
        <field name="r"/>
        <field name="e"/>
        <field name="t"/>
        <field name="i"/>
        <field name="b"/>
        <field name="m"/>
      </xpath>

    </field>
  </record>
</odoo>
