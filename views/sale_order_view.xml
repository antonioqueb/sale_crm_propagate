<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_sale_order_form_crm_fields" model="ir.ui.view">
    <field name="name">sale.order.form.crm.fields</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <!-- Conserva tu pestaña "Información del CRM" -->
      <xpath expr="//notebook/page[@name='order_lines']" position="before">
        <page string="Información del CRM" name="crm_information">
          <group>
            <group>
              <field name="service_frequency"/>
              <field name="pickup_location"/>
            </group>
            <group>
              <field name="residue_new"/>
              <field name="requiere_visita"/>
            </group>
          </group>
        </page>
      </xpath>

      <!-- Inserta los nuevos campos globales justo encima de Términos de pago -->
      <xpath expr="//field[@name='payment_term_id']" position="before">
        <group>
          <field name="expiration_date"/>
          <field name="no_delivery"/>
        </group>
      </xpath>

      <!-- Inyecta 'residue_type' y CRETIBM en el tree de order_line -->
      <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
        <field name="residue_type"/>
        <field name="c"/>
        <field name="r"/>
        <field name="e"/>
        <field name="t"/>
        <field name="i"/>
        <field name="b"/>
        <field name="m"/>
      </xpath>

      <!-- Inyecta CRETIBM en el form embebido de order_line -->
      <xpath expr="//field[@name='order_line']/form/field[@name='residue_type']" position="after">
        <field name="c"/>
        <field name="r"/>
        <field name="e"/>
        <field name="t"/>
        <field name="i"/>
        <field name="b"/>
        <field name="m"/>
      </xpath>

    </field>
  </record>
</odoo>
